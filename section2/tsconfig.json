{
  "include": ["src"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": false, // null 타입이 아닌 변수에 null 값을 허용하기 위해 옵션을 끔
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  }
}
